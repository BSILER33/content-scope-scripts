{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "actionType": {
      "type": "string",
      "const": "expectation"
    },
    "id": {
      "type": "string"
    },
    "expectations": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "title": "ElementExpectation",
            "properties": {
              "type": {
                "type": "string",
                "const": "element"
              },
              "selector": {
                "type": "string"
              },
              "parent": {
                "type": "string"
              }
            },
            "required": ["type", "selector", "parent"]
          },
          {
            "title": "UrlExpectation",
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "url"
              },
              "expect": {
                "type": "string"
              }
            },
            "required": ["type", "expect"]
          },
          {
            "title": "TextExpectation",
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "text"
              },
              "selector": {
                "type": "string"
              },
              "expect": {
                "type": "string"
              }
            },
            "required": ["type", "selector", "expect"]
          }
        ]
      }
    },
    "retry": {"$ref": "./retry.json"}
  },
  "required": ["actionType", "id", "expectations"]
}
