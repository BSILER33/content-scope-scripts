{
  "compilerOptions": {
    "target": "es2021",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "DOM.Iterable"],
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true
  },
  "include": [
    "src",
    "unit-test",
    "scripts",
    "integration-test/*.js",
    "integration-test/helpers"
  ]
}
