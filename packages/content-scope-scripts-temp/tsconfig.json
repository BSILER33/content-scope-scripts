{
  "compilerOptions": {
    "target": "es2021",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "composite": true
  },
  "include": [
    "src",
    "scripts",
    "unit-test",
    "integration-test",
    "inject",
    "lib",
    "build/locales"
  ],
  "exclude": [
    "integration-test/pages",
    "integration-test/extension",
  ]
}
